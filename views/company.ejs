            <div class="row">
                <div class="col-sm-12">
                    <div class="ibox">
                        <div class="ibox-title">
                            <h5>Company List</h5>
                            <div class="ibox-tools">
                                <button type="button" onclick="$('#create-company-modal').modal('show');" class="btn btn-primary btn-xs">Create Company</button>
                            </div>
                        </div>
                        <div class="ibox-content">
                            <div class="row">
                                <div class="col-md-12">
